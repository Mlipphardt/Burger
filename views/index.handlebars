
<div class = "container">

    <div class = "row">
        <div class = "col-md-8 mx-auto">
            <h1>Create Da Burgers... Eat Da Burgers</h1>
        </div>
    </div>

    <div class = "row mt-3">
        <div class = "col-md-2"></div>
        <div class = "col-md-4">
            <h3>Hot and ready!</h3>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>{{this.burger_name}}</li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class = "col-md-4">
            <h3>In memory of flavor...</h3>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>{{this.burger_name}}</li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class = "col-md-2"></div>
    </div>



    <div class = "row mt-5">

        <div class = "col-md-4 mx-auto">
        <h2 class = "text-center">Order up!</h2>
            <form id = "create-burger-form">
            <div class="form-group">
                <label for="burger">Name your burger:</label>
                <input type="text" id="burger" name="name">
            </div>
            <button type="submit">Add burger!</button>
            </form>
        </div>

    </div>

</div>